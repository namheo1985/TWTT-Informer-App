<resources>
    <style name="TWTTTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/twtt_text</item>
        <item name="colorAccent">@color/twtt_accent</item>
        <item name="colorPrimary">@color/twtt_primary</item>
    </style>
    <style name="TWTTTheme.Toolbar" parent="TWTTTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>
    <style name="TWTTTheme.Toolbar.PopupMenu" parent="TWTTTheme">
        <item name="android:background">@color/white</item>
    </style>
</resources>
